<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mobile.belanjapasar.afterlogin.AfterLogin_SelesaiOrder">

    <!-- ====================================================================================== -->
    <LinearLayout
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorOrange"
        android:orientation="horizontal"
        android:gravity="center">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lbl_alamat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="No Order: 1234 5678 1234 1234"/>

    </LinearLayout>

    <!-- ====================================================================================== -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">



        <include layout="@layout/afterlogin_selesai_order_content_main" />





    </LinearLayout>

    <!-- ====================================================================================== -->

    <LinearLayout
        android:id="@+id/home_footer"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorOrange"
        android:orientation="horizontal"
        android:gravity="center">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lbl_harga"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="Rp 500.000,-"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_selesai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_margin="3dp"
            android:text="Selesai"/>

    </LinearLayout>

    <!-- ====================================================================================== -->

</LinearLayout>
