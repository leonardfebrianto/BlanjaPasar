<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mobile.belanjapasar.activity.Product"
    tools:showIn="@layout/product_activity_main">

    <!-- ======================================================================================= -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp">
            <!-- ............................................................................... -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/colorOrange2"
                android:gravity="center">
                <ImageView
                    android:id="@+id/product1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:scaleType="fitXY"
                    android:padding="1dp"
                    android:src="@drawable/product_apel"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_column="1"
                    android:text="Apel Super"
                    android:gravity="bottom|center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_column="1"
                    android:text="Rp 30.000"
                    android:gravity="top|center"/>

            </LinearLayout>
            <!-- ............................................................................... -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/colorGreen"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/product2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:scaleType="fitXY"
                    android:padding="1dp"
                    android:src="@drawable/product_pisang"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_column="1"
                    android:text="Pisang Raja"
                    android:gravity="bottom|center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_column="1"
                    android:text="Rp 20.000"
                    android:gravity="top|center"/>

            </LinearLayout>
            <!-- ............................................................................... -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/colorOrange2"
                android:gravity="center">
                <ImageView
                    android:id="@+id/product3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:scaleType="fitXY"
                    android:padding="1dp"
                    android:src="@drawable/product_tomat"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_column="1"
                    android:text="Tomat"
                    android:gravity="bottom|center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_column="1"
                    android:text="Rp 10.000"
                    android:gravity="top|center"/>

            </LinearLayout>
            <!-- ............................................................................... -->
        </TableRow>

        <!-- ======================================================================================= -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal">
            <!-- ............................................................................... -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/colorGreen"
                android:gravity="center">
                <ImageView
                    android:id="@+id/product4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:scaleType="fitXY"
                    android:padding="1dp"
                    android:src="@drawable/product_bawang_merah"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_column="1"
                    android:text="Bawang Merah"
                    android:gravity="bottom|center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_column="1"
                    android:text="Rp 10.000"
                    android:gravity="top|center"/>

            </LinearLayout>
            <!-- ............................................................................... -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/colorOrange2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/product5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:scaleType="fitXY"
                    android:padding="1dp"
                    android:src="@drawable/product_ikan"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_column="1"
                    android:text="Ikan Kakap"
                    android:gravity="bottom|center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_column="1"
                    android:text="Rp 50.000"
                    android:gravity="top|center"/>

            </LinearLayout>
            <!-- ............................................................................... -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/colorGreen"
                android:gravity="center">
                <ImageView
                    android:id="@+id/product6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:scaleType="fitXY"
                    android:padding="1dp"
                    android:src="@drawable/product_sapi"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_column="1"
                    android:text="Sapi Import"
                    android:gravity="bottom|center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_column="1"
                    android:text="Rp 100.000"
                    android:gravity="top|center"/>

            </LinearLayout>
            <!-- ............................................................................... -->
        </TableRow>
    </TableLayout>
</LinearLayout>
